#include <Servo.h>

Servo gateServo;

// Pin definitions
const int irEntry = 2;
const int irExit = 3;
const int redLED = 6;
const int greenLED = 7;
const int servoPin = 9;

bool trainDetected = false;

void setup() {
  pinMode(irEntry, INPUT);
  pinMode(irExit, INPUT);
  pinMode(redLED, OUTPUT);
  pinMode(greenLED, OUTPUT);
  
  gateServo.attach(servoPin);
  
  // Start with gate open
  openGate();
}

void loop() {
  int entryState = digitalRead(irEntry);
  int exitState = digitalRead(irExit);

  // Train arriving
  if (entryState == LOW && !trainDetected) {
    trainDetected = true;
    closeGate();
  }

  // Train leaving
  if (exitState == LOW && trainDetected) {
    trainDetected = false;
    openGate();
  }
}

void closeGate() {
  digitalWrite(redLED, HIGH);
  digitalWrite(greenLED, LOW);
  gateServo.write(0);   // Gate down
  delay(500);
}

void openGate() {
  digitalWrite(redLED, LOW);
  digitalWrite(greenLED, HIGH);
  gateServo.write(90);  // Gate up
  delay(500);
}
